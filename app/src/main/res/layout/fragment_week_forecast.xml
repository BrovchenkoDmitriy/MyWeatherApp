<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7ECDF1"
    tools:context=".presentation.weekForecast.WeekForecastFragment">

    <ProgressBar
        android:id="@+id/pb_loadWeekWeather"
        style="?android:attr/progressBarStyle"
        android:layout_gravity="center"
        android:indeterminateTint="@color/subYellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_further_week"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
android:layoutAnimation="@anim/layout_animation"

        tools:listitem="@layout/week_weather_item" />

</FrameLayout>